# ===========================================
# Horse Tempo - Environment Variables
# ===========================================

# Node
NODE_ENV=development

# ===========================================
# Database
# ===========================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=horse_vision
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/horse_vision?schema=public"

# ===========================================
# Redis
# ===========================================
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=

# ===========================================
# JWT
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# API
# ===========================================
API_PORT=4000
CORS_ORIGINS=http://localhost:3000

# ===========================================
# Web
# ===========================================
NEXT_PUBLIC_API_URL=http://localhost:4000/api
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===========================================
# Storage (MinIO for local, S3 for production)
# ===========================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_ENDPOINT=http://localhost:9000

# AWS S3 (Production)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=eu-west-3
AWS_S3_BUCKET=horse-vision-uploads

# ===========================================
# Email (MailHog for local)
# ===========================================
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@horse-vision.ai

# ===========================================
# Stripe
# ===========================================
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_STARTER=price_...
STRIPE_PRICE_PROFESSIONAL=price_...
STRIPE_PRICE_ENTERPRISE=price_...

# ===========================================
# AI / ML
# ===========================================
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# ===========================================
# Monitoring
# ===========================================
SENTRY_DSN=
OTEL_EXPORTER_OTLP_ENDPOINT=
