{
  "name": "horse-vision-ai",
  "version": "0.1.0",
  "private": true,
  "description": "Horse Vision AI - Plateforme d'analyse Ã©questre par intelligence artificielle",
  "author": "OLB Sports <contact@olb-sports.com>",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "build": "turbo run build",
    "build:api": "turbo run build:deploy --filter=@horse-vision/api",
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@horse-vision/web",
    "dev:api": "turbo run dev --filter=@horse-vision/api",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "prepare": "node -e \"try { require.resolve('husky') && require('child_process').execSync('husky install') } catch(e) {}\"",
    "db:migrate": "turbo run db:migrate --filter=@horse-vision/api",
    "db:seed": "turbo run db:seed --filter=@horse-vision/api",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:build": "docker compose build"
  },
  "dependencies": {
    "turbo": "^1.11.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
