# Horse Vision AI - API Environment Variables
# Copy this file to .env and fill in the values

# ===========================================
# Database (Required)
# ===========================================
# Local: postgresql://postgres:postgres@localhost:5432/horse_vision
# Render: Automatically set from DATABASE_URL
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/horse_vision?schema=public"

# ===========================================
# JWT Authentication (Required)
# ===========================================
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_REFRESH_SECRET="your-refresh-token-secret-change-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# ===========================================
# Server Configuration
# ===========================================
PORT=4000
NODE_ENV=development

# Frontend URL for CORS and emails
FRONTEND_URL="http://localhost:3000"

# CORS Origins (comma separated for multiple)
CORS_ORIGINS="http://localhost:3000"

# ===========================================
# Redis (Optional - for queues)
# ===========================================
# Local: redis://localhost:6379
# Render: Use Upstash (free) or leave empty for in-memory
REDIS_URL=""

# ===========================================
# AWS S3 (Required for file uploads)
# ===========================================
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="eu-west-3"
AWS_S3_BUCKET=""

# CloudFront CDN (Optional)
AWS_CLOUDFRONT_DOMAIN=""

# ===========================================
# Stripe Payments (Required for billing)
# ===========================================
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""

# ===========================================
# Email (Required for auth emails)
# ===========================================
# Resend.com (free tier: 3000 emails/month)
RESEND_API_KEY=""
EMAIL_FROM="Horse Vision AI <noreply@horsevision.ai>"

# ===========================================
# OpenAI (Required for AI analysis)
# ===========================================
OPENAI_API_KEY=""
OPENAI_MODEL="gpt-4-vision-preview"

# ===========================================
# Monitoring (Optional)
# ===========================================
SENTRY_DSN=""
